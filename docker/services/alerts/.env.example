# Configuration du service de gestion d'alertes
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# =============================================================================
# CONFIGURATION DU LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/alerts.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# CONFIGURATION REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ALERTS_LIMIT=10000
REDIS_SEVERITY_LIMIT=1000

# =============================================================================
# CONFIGURATION FLASK
# =============================================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=9003
FLASK_DEBUG=false
MAX_ALERTS_PER_PAGE=100

# =============================================================================
# CONFIGURATION DU PROCESSEUR D'ALERTES
# =============================================================================
ALERT_HISTORY_LIMIT=1000
MAX_SEVERITY_SCORE=5
REPEATED_ALERT_WINDOW_MINUTES=5
REPEATED_ALERT_CHECK_COUNT=50

# =============================================================================
# CONFIGURATION EMAIL (SMTP)
# =============================================================================
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=ids-alerts@company.com
ALERT_EMAIL_RECIPIENT=admin@company.com

# =============================================================================
# CONFIGURATION DES NOTIFICATIONS
# =============================================================================
# Méthodes de notification par niveau de sévérité (séparées par des virgules)
CRITICAL_NOTIFICATION_METHODS=email,sms
HIGH_NOTIFICATION_METHODS=email
MEDIUM_NOTIFICATION_METHODS=dashboard
LOW_NOTIFICATION_METHODS=dashboard

# =============================================================================
# CONFIGURATION DES CANAUX D'ÉCOUTE
# =============================================================================
# Canaux Redis d'écoute des alertes (séparés par des virgules)
ALERT_CHANNELS=alerts:ml,alerts:monitoring,alerts:network

# =============================================================================
# EXEMPLES DE CONFIGURATION POUR DIFFÉRENTS ENVIRONNEMENTS
# =============================================================================

# DÉVELOPPEMENT
# LOG_LEVEL=DEBUG
# FLASK_DEBUG=true
# REDIS_HOST=localhost

